{
  "name": "govuk",
  "version": "0.1.0",
  "description": "A set of css, images and javascript to implement the GOV.UK styles on uxforms",
  "scripts": {
    "sass": "node-sass --output-style=expanded --include-path=node_modules/govuk_frontend_toolkit/stylesheets --include-path=node_modules/govuk-elements-sass/public/sass source/scss/main.scss public/stylesheets/govuk-elements.css",
    "dev-server": "gulp package && http-server ./target -a localhost -p 8000"
  },
  "devDependencies": {
    "del": "^1.1.1",
    "govuk-elements-sass": "^1.2.1",
    "govuk_frontend_toolkit": "^4.12.0",
    "gulp": "^3.8.11",
    "gulp-bintray": "^0.2.4",
    "gulp-bump": "^1.0.0",
    "gulp-git": "^1.7.0",
    "gulp-sass": "^2.2.0",
    "gulp-zip": "^3.0.2",
    "http-server": "^0.9.0",
    "properties-reader": "^0.0.15",
    "run-sequence": "^1.0.2"
  }
}
